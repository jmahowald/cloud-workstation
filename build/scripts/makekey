#!/usr/bin/env python


"""
Usage:
  makeawskey  [--tag-name <TAG>]... [--tag-value <VALUE>]...
  scheduler.py [--owner OWNER]

Options:

   -d --dir   Directory to put keys in [default: keys]  Speed in knots [default: 10].

   -t --tag-name <tagname>    The name of the tag to filter on.  You must have an equal number of tag Values
   -v --tag-value <tagvalue>   Find instance with this given value
   -h --help            Show this screen.

"""

from docopt import docopt


if __name__ == "__main__":
    opts = docopt(__doc__)
    tags = opts['--tag-name']
    tag_values = opts['--tag-value']

    if(len(tags) != len(tag_values)):
        sys.exit('Must have same number of tag names as values')
